{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@charts/*": [
        "components/chart/*"
      ],
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM"
    ]
  }
}